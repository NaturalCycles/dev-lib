    "eslint-plugin-vue": "^9.0.0",
    "expect-type": "^0.20.0",
    "globals": "^15.8.0",
    "husky": "^9.0.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.0.1",
    "micromatch": "^4.0.5",
    "mitm": "^1.7.0",
    "prettier": "^3.0.0",
    "timekeeper": "^2.2.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.2",
    "typescript-eslint": "^8.0.0",
    "yargs": "^17.0.0"
