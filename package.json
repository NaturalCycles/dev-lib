  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dev-lib": "dist/bin/dev-lib.js",
    "up": "dist/bin/up.js",
    "upnc": "dist/bin/upnc.js"
  },
  "engines": {
    "node": ">=20.13.0"
