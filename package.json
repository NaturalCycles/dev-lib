    "@naturalcycles/js-lib": "^14.0.0",
    "@naturalcycles/nodejs-lib": "^13.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@types/yargs": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import-x": "^4.0.0",
